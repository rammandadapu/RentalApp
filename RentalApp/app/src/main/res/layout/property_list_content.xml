<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/property_image_list"
        android:src="@mipmap/buildings"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:scaleType="fitXY"
        android:padding="0dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:id="@+id/property_gradient_list"
        android:background="@mipmap/gradient"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:scaleType="centerCrop"
        android:padding="0dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="Rent"
        android:id="@+id/rent_list"
        android:layout_above="@+id/bed_bath_list"
        android:paddingTop="5dp"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BedBath"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/bed_bath_list"
        android:paddingLeft="5dp"
        android:layout_above="@+id/address_list"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/address_list"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_alignBottom="@+id/property_image_list"
        android:textColor="#FFFFFF" />

</RelativeLayout>