<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rentalapp.PropertyDetailFragment">

    <TextView
        android:id="@+id/rent_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="rent"
        />

    <TextView
        android:id="@+id/bed_bath_detail"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rent_detail"
        android:padding="16dp"
        android:text="rent"
         />

    <TextView
        android:id="@+id/address_detail"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bed_bath_detail"
        android:padding="16dp"
        android:text="rent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/address_detail"
        android:layout_alignParentBottom="true">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_edit"
        android:id="@+id/button_post_edit"
        android:visibility="gone"
        android:drawableRight="@drawable/ic_edit_white_24dp"
        android:theme="@style/ThemeOverlay.MyDarkButton"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_post_cancelled"
        android:visibility="gone"
        android:theme="@style/ThemeOverlay.RedButton"
         />
    </LinearLayout>
</RelativeLayout>
